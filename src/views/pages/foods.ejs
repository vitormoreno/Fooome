              <p><%= food.description %></p>
    
              <h4>Seus gostos</h4>
              <ul>
                <% food.attributes.forEach(function(attrFood) { %>
                  <% attributes.forEach(function(attrList) { %>
                    <%if (attrList.id == attrFood){ %>
                      <li><%= attrList.name %></li>
                    <% } %>
                  <% }); %>
                <% }); %>
              </ul>
    
              <a href="<%= food.recipe %>" target="_blank" class="btn-light flaticon-cooking">Receita</span></a>
    
              <a href="<%= food.delivery %>" target="_blank" class="btn-light flaticon-delivery">Delivery</a>
    
