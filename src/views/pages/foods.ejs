    <style>
      header .flaticon-reload {
        color: var(--color--red);
      }

      header .flaticon-reload:hover {
        color: white;
      }

      [class^="flaticon-"], [class*=" flaticon-"]{
        text-transform: uppercase;
      }

      h3{
        font-size: 1.8em;
        line-height: 0.9em;
        letter-spacing: -0.03em;
      }

      h4{
        font-size: 1em;
      }

      @keyframes animate--food {
        from {
          transform: translateY(500px);
          filter: blur(10px);
          opacity: 0;
          }
        to {
          transform: translateY(0);
          filter: blur(0);
          opacity: 1;
          }
      }

      .food{
        display: flex;
        justify-content: space-between;
        align-items: flex-start;

        padding-bottom: 60px;
      }

      .food.show{
        transform: translateY(500px);
        filter: blur(10px);
        opacity: 0;
        
        animation-name: animate--food;
        animation-duration: 0.3s;
        animation-timing-function: ease-out;
        animation-fill-mode: both;
      }

      .food .photo,
      .food .description{
        border-radius: 8px;
      }

      .food .photo{
        display: flex;
        flex-direction: column;
        
        width: 58%;
        max-height: 380px;
        overflow: hidden;

        background-color: white;
      }
      
      .food .photo img{
        width: 100%;
        object-fit: cover;
      }

      .food .description{
        display: flex;
        flex-flow: row wrap;

        width: 40%;
        padding: 30px 35px;

        background-color: white;
      }

      .food .description p{
        flex-basis: 100%;

        padding: 10px 0 15px 0;
      }

      .food .description ul{
        display: flex;
        flex-flow: row wrap;
        flex-basis: 100%;

        padding-bottom:15px;
      }

      .food .description ul li::after{
        padding: 0 7px;

        content: "-";
      }

      .food .description ul li:last-child::after{
        padding: 0;

        content: "";
      }

      .food .description a{
        display: flex;
        align-items: center;

        margin: 10px 20px 0 0;

        font-size: 0.8em;
      }

      .food .description a:last-of-type{
         margin-right: 0;
      }

      .food .btn-light{
        color: var(--color--orange);
      }

      .food .btn-light:hover{
        color: var(--color--red);
      }

      @keyframes animate--link {
        0% {transform: scale(1)}
        25% {transform: scale(0.8)}
        75% {transform: scale(1.2)}
        100% {transform: scale(1)}
      }

      .food .btn-light:hover:before{
        animation-name: animate--link;
        animation-duration: 0.5s;
      }

      @media (max-width: 1000px){ 
        .food{
          flex-direction: column !important;

          padding-bottom: 25px;
        }

        .food .photo, .food .description{
          width: 100% !important;
        }

        .food .photo{
          border-bottom-left-radius: 0 !important;
          border-bottom-right-radius: 0 !important;
        }

        .food .description{
          border-top-left-radius: 0 !important;
          border-top-right-radius: 0 !important;
        }
      }
    </style>

    <script>
      const { body }   =  document
      const header     =  document.querySelector('header')
      const foods      =  document.querySelectorAll('.food')
      const maxHeight  =  header.clientHeight

      body.style.paddingTop = `${maxHeight+10}px`
      header.style.position = 'fixed'

      foods.forEach( food => {
        food.style.opacity = 0
      })

      function headerStyle() {
        pageYOffset < 50
          ? header.classList.remove('shadow')
          : header.classList.add('shadow')
      }

      function showFood() {       
        foods.forEach( food => {

          if (food.getBoundingClientRect().top + 200 < window.innerHeight)
              food.classList.add('show')
        })
      }

      window.addEventListener('scroll', () => {
        headerStyle()
        showFood()
      })

      window.addEventListener('load', () => {
        headerStyle()
        showFood()
      })
    </script>
